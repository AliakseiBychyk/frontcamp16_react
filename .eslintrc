{
  "ecmaFeatures": {
    "jsx": true,
    "modules": true
  },
  "parser": "babel-eslint",
  "env": {
    "browser": true,
    "node": true,
    "mocha": true
  },
  "globals": {
    "__base": true,
    "assert": true,
    "cp": true,
    "exec": true,
    "expect": true,
    "mkdir": true,
    "sinon": true,
    "TestUtils": true,
    "FeatureToggling": true,
    "dataLayer": true
  },
  "rules": {
    "new-cap": 0,
    "consistent-return": 1,
    "quotes": [2, "single"],
    "strict": [2, "never"],
    "react/jsx-uses-react": 2,
    "react/jsx-uses-vars": 2,
    "react/react-in-jsx-scope": 2
  },
  "plugins": [
    "react"
  ]
}